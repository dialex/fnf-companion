{
  "name": "fnf-companion",
  "version": "1.8.0",
  "description": "A companion website while you play Fight & Fantasy books",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css}\" \"*.{js,json,html}\" \"*.config.{js,ts}\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:check-descriptions": "node scripts/check-test-descriptions.js",
    "prepare": "husky",
    "release": "node src/scripts/release.js patch",
    "release:patch": "node src/scripts/release.js patch",
    "release:minor": "node src/scripts/release.js minor",
    "release:major": "node src/scripts/release.js major"
  },
  "lint-staged": {
    "*.{js,jsx,json,css,html}": [
      "prettier --write"
    ],
    "*.config.{js,ts}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "@mdi/react": "^1.6.1",
    "bootstrap": "^5.3.3",
    "canvas-confetti": "^1.9.4",
    "js-yaml": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.1",
    "vite": "^5.0.8",
    "vitest": "^4.0.15"
  }
}
